doi = {10.1126/science.1219179},
file = {:F$\backslash$:/git/Data/mendeley/Schulz et al. - 2012 - A lineage of myeloid cells independent of myb and hematopoietic stem cells(2).pdf:pdf},
issn = {10959203},
journal = {Science},
mendeley-groups = {Tumor-TAM/011{\_}origin},
number = {6077},
