}


@article{Schulz2012a,
abstract = {Macrophages and dendritic cells (DCs) are key components of cellular immunity and are thought to originate and renew from hematopoietic stem cells (HSCs). However, some macrophages develop in the embryo before the appearance of definitive HSCs. We thus reinvestigated macrophage development. We found that the transcription factor Myb was required for development of HSCs and all CD11bhigh monocytes and macrophages, but was dispensable for yolk sac (YS) macrophages and for the development of YS-derived F4/80bright macrophages in several tissues, such as liver Kupffer cells, epidermal Langerhans cells, and microglia - cell populations that all can persist in adult mice independently of HSCs. These results define a lineage of tissue macrophages that derive from the YS and are genetically distinct from HSC progeny.},
